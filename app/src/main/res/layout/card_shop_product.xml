<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="60dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_marginStart="5dp"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:text="TATA Salt Iodized 5KG"
            android:layout_toEndOf="@id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_product_mrp"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            android:text="M.R.P : Rs. 19"
            android:layout_below="@id/tv_product_name"
            android:layout_toEndOf="@id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_product_quantity"
            android:layout_marginStart="5dp"
            android:textSize="12sp"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="8dp"
            android:text="@string/quantity"
            android:layout_below="@id/tv_product_mrp"
            android:layout_toEndOf="@id/img_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_plus"
            android:layout_below="@id/tv_product_mrp"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_plus"
            android:layout_toEndOf="@id/tv_product_quantity"
            android:layout_width="30dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_marginStart="5dp"
            android:textSize="24sp"
            android:textColor="@color/colorAccent"
            android:text="1"
            android:layout_alignBottom="@id/btn_plus"
            android:layout_below="@id/tv_product_mrp"
            android:layout_toEndOf="@id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageButton
            android:id="@+id/btn_minus"
            android:layout_below="@id/tv_product_mrp"
            android:layout_marginStart="4dp"
            android:background="@drawable/ic_minus"
            android:layout_toEndOf="@id/tv_quantity"
            android:layout_width="30dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_height="30dp" />

        <Button
            android:id="@+id/btn_add"
            android:text="ADD"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="4dp"
            android:layout_alignBottom="@id/img_product"
            android:layout_alignParentEnd="true"
            android:textColor="@android:color/white"
            android:backgroundTint="@android:color/holo_red_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</android.support.v7.widget.CardView>