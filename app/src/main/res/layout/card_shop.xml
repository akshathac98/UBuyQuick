<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_toEndOf="@id/img_shop"
        android:text="Shop Name"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_shop_specialization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shop_name"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="8dp"
        android:maxLines="4"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/img_shop"
        android:text="Shop specialization"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_quick_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_shop"
        android:layout_marginBottom="4dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="8dp"
        android:text="Quick Delivery"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_minimum_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_shop"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@id/img_shop"
        android:layout_marginStart="8dp"
        android:text="Min Order: "
        android:textColor="@color/colorPrimary"
        android:textSize="14sp"/>

    <View
        android:background="@color/colorPrimary"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_below="@id/tv_quick_delivery"
        android:layout_width="match_parent"
        android:layout_height="0.5dp" />

</RelativeLayout>