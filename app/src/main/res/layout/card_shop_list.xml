<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_product"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/img_product"
            android:text="TATA Salt Iodized 5KG"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_product_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/img_product"
            android:text="\u20B919.5/-"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/tv_quantity"
            android:layout_centerVertical="true"
            android:layout_marginTop="4dp"
            android:text="@string/quantity"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/tv_quantity"
            android:layout_width="50dp"
            android:inputType="number"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_plus"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/btn_plus"
            android:layout_toStartOf="@id/btn_remove"
            android:text="1"
            android:textSize="24sp" />

        <ImageButton
            android:id="@+id/btn_remove"
            android:backgroundTint="@android:color/holo_red_light"
            android:background="@drawable/ic_dustbin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>