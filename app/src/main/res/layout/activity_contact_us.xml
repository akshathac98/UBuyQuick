<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUs">

    <TextView
        android:id="@+id/tv_head1"
        android:text="Call Us On"
        android:layout_marginTop="16dp"
        android:textSize="32sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_call"
        android:textSize="22sp"
        android:text="9945435516\n8792881428"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_head1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_head2"
        android:text="Write to Us At"
        android:layout_marginTop="50dp"
        android:textSize="32sp"
        android:layout_below="@id/tv_call"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_write"
        android:textSize="22sp"
        android:text="support@ubuyquick.com"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_head2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>