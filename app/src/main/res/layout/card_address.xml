<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:id="@+id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:backgroundTint="@color/colorPrimary" />

        <ImageButton
            android:layout_toStartOf="@id/btn_delete"
            android:layout_marginEnd="8dp"
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_nav_edit"
            android:backgroundTint="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_head_name"
            android:layout_below="@id/btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Name:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="8dp"
            android:layout_alignStart="@id/tv_address2"
            android:layout_below="@id/btn_delete"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/tv_head_name"
            android:text="Ajay Srinivas"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_head_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_head_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Contact:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_name"
            android:layout_alignStart="@id/tv_address2"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/tv_head_name"
            android:text="9008003968"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tv_head_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_head_number"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Flat No:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_building"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/tv_address2"
            android:layout_below="@id/tv_number"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/tv_head_building"
            android:text="P.166/8 Golden Jubilee Complex, Command Hospital Air Force Station, Bangalore - 560 007"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_head_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_building"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Address Line 1:"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@id/tv_address2"
            android:layout_below="@id/tv_building"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/tv_head_name"
            android:text="2018-05-04 18:36:20"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_head_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_address1"
            android:layout_marginStart="8dp"
            android:text="Address Line 2: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_address1"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/tv_head_2"
            android:text="Pick Up"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_head_pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tv_address2"
            android:layout_marginStart="8dp"
            android:text="Pincode: "
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_pincode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_address2"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/tv_head_2"
            android:text="560091"
            android:textAlignment="textStart"
            android:textColor="@color/colorTextPrimary"
            android:textSize="14sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>